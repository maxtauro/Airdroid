<resources>

    <style name="PreferenceTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorDarkGrey</item>
        <item name="colorAccent">@color/bestBlue</item>
    </style>

    <style name="AppTheme.Transparent" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:colorAccent">@color/bestBlue</item>
    </style>

    <style name="PreferenceDialogSwitchStyle" parent="Theme.AppCompat.DayNight">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/bestBlue</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

</resources>
