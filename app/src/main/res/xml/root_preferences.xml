<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/display_header">

        <SwitchPreferenceCompat
                app:key="@string/OPEN_APP_PREF_KEY"
                app:persistent="true"
                app:summary="@string/opening_preference_summary"
                app:title="@string/opening_preference" />

        <SwitchPreferenceCompat
                app:key="@string/NOTIFICATION_PREF_KEY"
                app:persistent="true"
                app:title="@string/show_notification_preference" />

        <SwitchPreferenceCompat
                app:key="@string/AUTO_DISMISS_ENABLED_PREF_KEY"
                app:persistent="true"
                app:title="@string/auto_close_enabled_title" />

        <com.maxtauro.airdroid.preferenceactivity.NumberPickerPreference
                app:key="@string/AUTO_DISMISS_DURATION_PREF_KEY"
                app:persistent="true"
                app:title="@string/auto_close_app_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/dark_mode_header">

        <SwitchPreferenceCompat
                app:key="@string/DARK_MODE_BY_SYSTEM_SETTINGS_PREF_KEY"
                app:persistent="true"
                app:title="@string/enable_dark_mode_device_settings" />

        <SwitchPreferenceCompat
                app:key="@string/DARK_MODE_BY_TOGGLE_PREF_KEY"
                app:persistent="true"
                app:title="@string/enable_dark_mode" />

    </PreferenceCategory>

</PreferenceScreen>
